<h3>Lives</h3>
<p>
    <button data-bind="click: addLife">Add a life</button>
</p>
<div id="quote-lives" data-bind='template: "quote-lives-template"'></div>

<script type="text/html" id="quote-lives-template">
    <table>
        <tr>
            <th>Title</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Age Next</th>
        </tr>
        {{each(i, life) lives()}}
            <tr>
                <td><input name="Lives[${ i }].Title" data-bind="value: title" /></td>
                <td><input name="Lives[${ i }].FirstName" data-bind="value: firstName" /></td>
                <td><input name="Lives[${ i }].LastName" data-bind="value: lastName" /></td>
                <td><input name="Lives[${ i }].DateOfBirth" data-bind="value: dateOfBirth" /></td>
                <td><input data-bind="value: ageNext" /></td>
            </tr>
        {{/each}}
    </table>
</script>